@inject AuthenticationStateProvider AuthenticationStateProvider

<MudPaper Width="250px" Elevation="0">
    <MudNavMenu>
        <MudDivider Class="my-2" />
        <MudNavLink Href="/">Home</MudNavLink>
        <MudNavLink Href="/profile">Profile</MudNavLink>
        <AuthorizeView>
            <Authorized>
                <MudNavLink OnClick="Logout">Sign Out</MudNavLink>
            </Authorized>
            <NotAuthorized>
                <MudNavLink OnClick="Login">Sign In</MudNavLink>
            </NotAuthorized>
        </AuthorizeView>
    </MudNavMenu>
</MudPaper>

@code{
    public async Task Login()
    {
        await ((Auth0AuthenticationStateProvider)AuthenticationStateProvider)
            .LogInAsync();
    }

    public void Logout()
    {
        ((Auth0AuthenticationStateProvider)AuthenticationStateProvider)
            .LogOut();
    }
}